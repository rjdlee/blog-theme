<div class="post-grid">
    <!-- Pass filter_tag into the context to filter by that tag -->
    {{#get "posts" filter="tag:{{filter_tag}}" limit="2" include="authors,tags" as |tag_posts|}}
        {{#foreach tag_posts}}
            <article class="grid-item {{post_class}}">
                <div class="post-inside">
                    {{#if feature_image}}
                        <div class="post-bg" style="background-image: url({{feature_image}})"></div>
                    {{/if}}
                    <header class="post-header">
                        {{#if tags}}
                            <div class="post-tags">
                                <!-- We don't want tags to span more than one line and want to ignore the first -->
                                {{tags separator="" from="2" limit="2"}}
                            </div>
                        {{/if}}
                        <h2 class="post-title"><a href="{{{url}}}" rel="bookmark">{{title}}</a></h2>
                        <div class="post-meta">
                            by <span class="post-author">{{authors}}</span> on
                            <time class="published" datetime="{{date format='YYYY-MM-DD'}}">{{date
                                    format="MMMM DD, YYYY"}}</time>
                        </div><!-- .post-meta -->
                    </header><!-- .post-header -->
                    <div class="read-more">
                        <a class="button light" href="{{url}}" title="{{title}}">Read More</a>
                    </div>
                </div>
            </article><!-- .post -->
        {{/foreach}}
    {{/get}}
</div><!-- .post-grid -->
